<%- include('./nav') %>
<div class="container">
    <div class="row">
        <div class="col-md-8 ">
            <form class="mt-4" action="/dashboard/edit/<%= post.id%>" method="POST">
                <label for="title">Title</label>
                <input type="text" value="<%= post.title %>" name="title" id="title" class="form-control mb-4">
                <label for="body">Description</label>
                <textarea class="form-control" name="body" id="body" cols="30" rows="10"><%= post.body %></textarea>
                <button class="btn btn-primary mt-2" type="submit">Update</button>
            </form>
        </div>
        <div class="col-md-4">
           
           
        </div>
    </div>

</div>