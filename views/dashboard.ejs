<%- include('./nav') %>
<div class="container">
    <div class="row">
        <div class="col-md-8 ">
            <form class="mt-4" action="/dashboard" method="POST">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" class="form-control mb-4">
                <label for="body">Description</label>
                <textarea class="form-control" name="body" id="body" cols="30" rows="10"></textarea>
                <button class="btn btn-primary mt-2" type="submit">Publish</button>
            </form>
        </div>
        <div class="col-md-4">
            <h3 class="text-center mt-4">Your Posts</h3>
            <% posts.forEach((post)=> { %>
                <div class="card mb-2">
                    <div class="card-body">
                        <h5 class="card-title fw-bold"><%= post.title %></h5>
                        <p class="card-text"><%= post.body.substring(0, 100) + '...' %></p>
                        <a href="/dashboard/edit/<%= post._id%>" class="text-primary">Edit</a>
                        <a href="/dashboard/delete/<%= post._id%>" class="text-danger ms-4">Delete</a>
                    </div>
                </div>
            <%  }) %>
           
        </div>
    </div>

</div>