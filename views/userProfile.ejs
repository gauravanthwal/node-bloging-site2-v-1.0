<%- include('./nav') %>
<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6 border border-white p-5 ">
            <p><span class="text-muted">Name</span>: <%= user.name%></p>
            <p><span class="text-muted">E-mail</span>: <%= user.email%></p>
            <hr>
            <form  action="/user/profile" method="POST">
                <input type="text" name="name"  class="form-control mb-4" placeholder="Update UserName">
                <input type="email"  name="email" value="<%=user.email%>"  class="form-control mb-4" placeholder="<%=user.email%>">
                
                <button class="btn btn-outline-primary btn-sm mt-2" type="submit">Commit Changes</button>
            </form>
        </div>
        
    </div>
</div>